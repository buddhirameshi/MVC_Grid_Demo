@model DataTransferObjects.ItemDto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal edit-form">
        <h2>Create</h2>
        <hr class="line"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(item=>item.Description,new { @class="col-md-3 control-label"})
            <div class="col-md-9">
                @Html.TextAreaFor(item => item.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(item => item.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(item => item.Price, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(item => item.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(item => item.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">

        </div>

        <div class="form-group btn-block col-md-12">
           <button class="btn btn-success btn-md col-md-3" value="Create" type="submit">Add Item</button>
           <button class="btn btn-default btn-md col-md-3" value="Clear" type="reset">Clear</button>
        </div>

    </div>

}

<div>
    @Html.ActionLink("Back to Home","Display")
</div>

@section Scripts
{
   @Scripts.Render("~/bundles/jqueryval");
    }




